{
  "uid": "rpc-aggregator-system",
  "id": null,
  "title": "Application Metrics",
  "tags": ["rpc", "application", "system"],
  "style": "dark",
  "timezone": "browser",
  "schemaVersion": 39,
  "panels": [
    {
      "id": 1,
      "title": "Circuit Breaker State",
      "type": "stat",
      "description": "Current circuit breaker state per upstream (0=closed, 0.5=half-open, 1=open)",
      "targets": [
        {
          "expr": "rpc_circuit_breaker_state",
          "legendFormat": "{{upstream}}",
          "datasource": { "type": "prometheus", "uid": "prometheus" }
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "Closed", "color": "green" } } },
            { "type": "value", "options": { "0.5": { "text": "Half-Open", "color": "yellow" } } },
            { "type": "value", "options": { "1": { "text": "Open", "color": "red" } } }
          ]
        },
        "overrides": []
      }
    },
    {
      "id": 2,
      "title": "Healthy Upstreams",
      "type": "stat",
      "description": "Number of healthy upstream providers",
      "targets": [
        {
          "expr": "rpc_healthy_upstreams",
          "legendFormat": "Healthy",
          "datasource": { "type": "prometheus", "uid": "prometheus" }
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "green", "value": 2 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 3,
      "title": "Chain Tip Block",
      "type": "stat",
      "description": "Current chain tip block number",
      "targets": [
        {
          "expr": "rpc_chain_tip_block",
          "legendFormat": "Block",
          "datasource": { "type": "prometheus", "uid": "prometheus" }
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 12,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "displayMode": "list",
            "placement": "bottom"
          }
        },
        "overrides": []
      },
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      }
    },
    {
      "id": 5,
      "title": "Health Check Duration",
      "type": "timeseries",
      "description": "Health check response time by upstream",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(rpc_health_check_duration_seconds_bucket[5m]))",
          "legendFormat": "{{upstream}} - p95",
          "datasource": { "type": "prometheus", "uid": "prometheus" }
        },
        {
          "expr": "histogram_quantile(0.50, rate(rpc_health_check_duration_seconds_bucket[5m]))",
          "legendFormat": "{{upstream}} - p50",
          "datasource": { "type": "prometheus", "uid": "prometheus" }
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 4
      },
      "yAxes": [
        {
          "label": "Seconds",
          "min": 0
        }
      ]
    },
    {
      "id": 6,
      "title": "Circuit Breaker Transitions",
      "type": "timeseries",
      "description": "Circuit breaker state transitions over time",
      "targets": [
        {
          "expr": "rate(rpc_circuit_breaker_transitions_total[5m])",
          "legendFormat": "{{upstream}} -> {{to_state}}",
          "datasource": { "type": "prometheus", "uid": "prometheus" }
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 4
      },
      "yAxes": [
        {
          "label": "Transitions/sec",
          "min": 0
        }
      ]
    },
    {
      "id": 12,
      "title": "Reorg Detections",
      "type": "stat",
      "description": "Blockchain reorganizations detected per hour",
      "targets": [
        {
          "expr": "rate(rpc_reorgs_detected_total[1h]) * 3600",
          "legendFormat": "Reorgs/hour",
          "datasource": { "type": "prometheus", "uid": "prometheus" }
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 18,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {},
        "overrides": []
      }
    },
    {
      "id": 14,
      "title": "Batch Request Size Distribution",
      "type": "timeseries",
      "description": "Distribution of batch request sizes",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(rpc_batch_request_size_bucket[5m]))",
          "legendFormat": "p95",
          "datasource": { "type": "prometheus", "uid": "prometheus" }
        },
        {
          "expr": "histogram_quantile(0.50, rate(rpc_batch_request_size_bucket[5m]))",
          "legendFormat": "p50",
          "datasource": { "type": "prometheus", "uid": "prometheus" }
        }
      ],
      "gridPos": {
        "h": 6,
        "w": 12,
        "x": 0,
        "y": 12
      },
      "yAxes": [
        {
          "label": "Requests per batch",
          "min": 0
        }
      ]
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "5s",
  "templating": {
    "list": []
  },
  "annotations": {
    "list": []
  },
  "editable": true,
  "graphTooltip": 0,
  "links": []
}